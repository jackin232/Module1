#include <ctype.h>
#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int K = 1;
    int Sum = 1;
    int N = get_int("N: ");
    if (N > 1)
    {
        while (Sum < N)
        {
            K++;
            Sum = Sum + K;
        }
        printf("K: %i\n", K);
    }
    else
    {
        printf("N must be greater than 1\n");
    }
}
